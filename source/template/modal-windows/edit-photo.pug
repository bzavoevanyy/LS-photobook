doctype html
html
    head
        meta(charset="utf-8")
        meta(content="width=device-width, initial-scale=1" name="viewport")
        meta(content="ie=edge" http-equiv="x-ua-compatible")
        title Обо мне

        link(rel='stylesheet' href='assets/css/foundation.css')
        link(rel='stylesheet' href='assets/css/app.css')

        <!--[if lt IE 9]>
        script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
        <![endif]-->
    body
        .modal__window
            .modal__header
                .modal__title Редактировать фотографию
                svg.modal__close
                    use(xlink:href="assets/img/sprite.svg#close")
            .edit.modal__main
                .edit__name
                    .modal__desc Название
                    textarea(placeholder="Домик в лесу").edit__name-textarea.edit__name-textarea_name
                .edit__desc
                    .modal__desc.modal__desc_edit-photo Описание
                    textarea(placeholder="Описание фотографии может быть с #хештегами. Чтобы было красиво описание должно быть на несколько строк. Убедитесь сами!").edit__name-textarea.edit__name-textarea_desc
            .modal__footer
                .modal__footer-left
                    .btn.btn_save Сохранить
                    .modal__cancel Отменить
                .modal__footer-right
                    .btn.btn_delete Удалить
                        svg.btn-delete__image
                            use(xlink:href="assets/img/sprite.svg#delete")